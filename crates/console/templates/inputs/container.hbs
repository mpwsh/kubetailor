<div class="form-group">
  <span class="subtitle no-select">Container:</span>
  <div id="image-port-group">
    <input
      type="text"
      name="image"
      placeholder="Image"
      class="image-input"
      maxlength="50"
      value="{{tapp.container.image}}"
    />
    <input
      type="number"
      name="port"
      placeholder="Port"
      class="port-input"
      maxlength="5"
      value="{{tapp.container.port}}"
    />
    <input
      type="number"
      name="replicas"
      placeholder="Instances"
      class="replicas-input"
      maxlength="1"
      value="{{tapp.container.replicas}}"
    />
  </div>
</div>
<div class="form-group">
  <span class="subtitle no-select">Volumes:</span>
  <div id="volume-pairs">
    {{#each tapp.volumes}}
      <div class="form-group-inline key-value-group">
        <input
          class="kv-input"
          type="text"
          name="volume_key"
          placeholder="Mount Path"
          value="{{@key}}"
        />
        <input
          class="kv-input"
          type="text"
          name="volume_value"
          placeholder="Size"
          value="{{this}}"
        />
        <button type="button" class="delete-btn">
          <i class="fas fa-trash"></i>
        </button>
      </div>
    {{/each}}
  </div>
</div>
<button type="button" id="add-volume-btn" class="add-env-btn">+</button>
<div class="form-group">
  <span class="subtitle no-select">Files:</span>
  <div id="file-pairs">
    {{#each tapp.file_mounts}}
      <div class="file-mount-group">
        <input
          class="kv-input"
          type="text"
          name="file_key"
          placeholder="File Path"
          value="{{@key}}"
        />
        <input
          class="kv-input"
          type="text"
          name="file_content"
          placeholder="Content"
          value="{{this}}"
        />
        <button type="button" class="delete-btn">
          <i class="fas fa-trash"></i>
        </button>
      </div>
    {{/each}}
  </div>
</div>
<button type="button" id="add-file-btn" class="add-env-btn">+</button>
