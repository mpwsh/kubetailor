{{> header}}
{{> top-big}}
<div class="content">
  <span class="subtitle no-select">Search:
    <input type="text" id="log-search" name="name" value="{{search_term}}" />
  </span>
  <div id="log-content" class="log-container">
    {{#if logs}}
      {{#each logs}}
        <div class="log-entry">{{this}}</div>
      {{/each}} 
    {{/if}}
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const searchInput = document.getElementById('log-search');
  const logEntries = document.querySelectorAll('.log-container .log-entry');

  searchInput.addEventListener('input', function() {
    const searchTerm = searchInput.value.toLowerCase();

    logEntries.forEach(entry => {
      const logText = entry.textContent.toLowerCase();
      const isVisible = logText.includes(searchTerm);
      entry.style.display = isVisible ? 'block' : 'none';
    });
  });
});
</script>
