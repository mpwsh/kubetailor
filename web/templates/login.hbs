{{> head/main}}
{{> body }}
<div class="flex items-center justify-center min-h-screen bg-neutral-50 dark:bg-neutral-900 p-4">
    <div class="flex max-w-sm flex-col gap-4 border-neutral-300 bg-neutral-50/50 text-neutral-600 dark:border-neutral-700 dark:bg-neutral-900/50 dark:text-neutral-300 rounded-md border w-full">
        <!-- Header -->
        <div class="flex items-center justify-between border-b border-neutral-300 bg-neutral-50/60 px-4 py-2 dark:border-neutral-700 dark:bg-neutral-900/20">
            <h3 class="flex items-center gap-2 font-semibold text-neutral-900 dark:text-white">
                <span class="text-3xl" aria-hidden="true">✉️</span>
                Welcome Back!
            </h3>
        </div>

        <!-- Body -->
        <div class="px-4">
            <form id="form" action="/login" method="post" class="flex flex-col gap-4">
                <div class="flex flex-col gap-2">
                    <label for="email" class="text-sm font-medium text-neutral-900 dark:text-white">Email Address</label>
                    <input 
                        type="email" 
                        name="email" 
                        id="email"
                        class="rounded-md border border-neutral-300 bg-transparent px-3 py-2 text-sm placeholder:text-neutral-400 focus:outline-none focus:ring-2 focus:ring-neutral-400 focus:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50 dark:border-neutral-700 dark:focus:ring-neutral-400 dark:focus:ring-offset-neutral-900"
                        required
                    />
                </div>

                {{#if error_html}}
                    <p class="text-sm text-red-500">{{error_html}}</p>
                {{else}}
                    <p class="text-sm text-neutral-600 dark:text-neutral-400">No registration required</p>
                {{/if}}
            </form>
        </div>

        <!-- Footer -->
        <div class="flex flex-col gap-2 border-t border-neutral-300 bg-neutral-50/60 px-4 py-2 sm:flex-row sm:items-center dark:border-neutral-700 dark:bg-neutral-950/20">
            <span class="text-xs text-neutral-500 dark:text-neutral-400">
                Powered by <a href="https://portier.github.io" class="underline hover:text-neutral-900 dark:hover:text-white">Portier</a>
            </span>
            <div class="flex flex-col-reverse gap-2 sm:flex-row sm:ml-auto">
                {{> cmp/button-primary title="Login" type="submit" form="form" class="sm:order-2"}}
            </div>
        </div>
    </div>
</div>
