{{> top}}
<div class="flex items-center justify-center min-h-[80vh]">
    <div class="overflow-hidden w-full max-w-2xl rounded-md border border-neutral-300 dark:border-neutral-700 p-8">
        <div class="flex flex-col items-center justify-center space-y-6 text-center">
            <h1 class="text-4xl font-bold text-neutral-900 dark:text-white">{{status_code}}</h1>
            <p class="text-lg text-neutral-600 dark:text-neutral-300">{{title}}</p>
            {{#if error}}
            <textarea 
                readonly 
                class="w-full min-h-[100px] p-4 rounded-md bg-neutral-100 dark:bg-neutral-800 text-neutral-600 dark:text-neutral-300 border border-neutral-300 dark:border-neutral-700 focus:outline-none"
            >{{error}}</textarea>
            {{/if}}
            <a href="/">
            {{> cmp/button-primary title="Go back"}} 
            </a>
        </div>
    </div>
</div>
{{> footer}}
